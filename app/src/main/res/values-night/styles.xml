<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/diodrum_regular</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="ButtonDefault" parent="Widget.MaterialComponents.Button">
        <item name="background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/diodrum_semibold</item>
        <item name="tint">@android:color/black</item>
    </style>

    <style name="IconImageView">
        <item name="tint">@android:color/black</item>
    </style>

    <style name="FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="srcCompat">@drawable/ic_add_24</item>
        <item name="tint">@android:color/black</item>
    </style>

</resources>