<?xml version="1.0" encoding="utf-8"?>
<layout>
    
    <data>
        
        <variable
            name="bindings"
            type="com.shaatla.subscriptionmanager.subscriptions.ui.adapter.SubscriptionItemBindings" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> bindings.onClick()}">

        <ImageView
            android:id="@+id/subscription_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/subscription_image_description"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subscription_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/subscription_name_default"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/subscription_logo"
            app:layout_constraintTop_toTopOf="@id/subscription_logo" />

        <TextView
            android:id="@+id/subscription_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/expiration_date"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/subscription_logo"
            app:layout_constraintStart_toEndOf="@id/subscription_logo"
            app:layout_constraintTop_toBottomOf="@id/subscription_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>